<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="jardellimaa.filmes.activity.DetalhesFilmeActivity">

    <ImageView
        android:id="@+id/image_fundo_filme"
        android:layout_width="match_parent"
        android:layout_height="279dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_destalhes_titulo_filme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_fundo_filme"
        tools:text="Título do Filme" />

    <TextView
        android:id="@+id/text_data_lancamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="#111111"
        android:layout_marginLeft="10dp"
        android:text="Data de lançamento: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_destalhes_titulo_filme"
        tools:text="Data de lançamento: " />

    <TextView
        android:id="@+id/text_data_lancamento_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#111111"
        android:textSize="17dp"
        app:layout_constraintStart_toEndOf="@+id/text_data_lancamento"
        app:layout_constraintTop_toBottomOf="@+id/text_destalhes_titulo_filme"
        tools:text="02/04/2020" />

    <TextView
        android:id="@+id/text_generos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#111111"
        android:textSize="17dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_data_lancamento"
        tools:text="Aventura e Ação"/>

    <TextView
        android:id="@+id/text_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_generos"
        android:layout_marginTop="20dp"
        tools:text="A descrição é da hora aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa" />


</androidx.constraintlayout.widget.ConstraintLayout>
