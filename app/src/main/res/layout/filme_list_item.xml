<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardElevation="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <ImageView
            android:id="@+id/image_poster_filme"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/text_titulo_filme"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/image_poster_filme"
            android:textAlignment="center"
            android:padding="16dp"
            android:textColor="@android:color/black"
            tools:text="TÃ­tulo do Filme" />

        <ImageView
            android:id="@+id/image_gostei_preenchido"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:elevation="4dp"
            android:layout_below="@id/image_poster_filme"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_gostei_preenchido"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/image_gostei_nao_preenchido"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:elevation="10dp"
            android:layout_height="30dp"
            android:layout_below="@id/image_poster_filme"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_gostei_nao_preenchido"
            android:visibility="visible"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>